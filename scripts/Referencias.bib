doi = {10.1016/j.envpol.2016.10.039},
file = {:Users/johanaakerman/Documents/Proyecto Ingenier{\'{i}}a Hongos/Literatura/isidori2016.pdf:pdf},
issn = {18736424},
journal = {Environmental Pollution},
keywords = {Anticancer drugs,Cytotoxicity,Genotoxicity,Hospital effluents,Toxicity,Wastewater influents and effluents},
pages = {275--287},
pmid = {27814544},
title = {{Chemical and toxicological characterisation of anticancer drugs in hospital and municipal wastewaters from Slovenia and Spain}},
volume = {219},
year = {2016}
}
