issn = {10960953},
journal = {Environmental Research},
keywords = {Cytostatic drugs,Predicted environmental concentrations,Risk assessment,River,WWTP effluent},
pages = {161--172},
pmid = {25721243},
publisher = {Elsevier},
title = {{Predicting concentrations of cytostatic drugs in sewage effluents and surface waters of Catalonia (NE Spain)}},
